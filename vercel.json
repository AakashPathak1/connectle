{
    "version": 2,
    "builds": [
        {
            "src": "api/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "includeFiles": ["api/**/*"]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "cd frontend && npm install && npm run build",
                "outputDirectory": "."
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/wsgi.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/static/(.*)",
            "dest": "/frontend/build/static/$1"
        },
        {
            "src": "/(.+\\.[a-zA-Z]+)$",
            "dest": "/frontend/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/index.html"
        }
    ]
}
