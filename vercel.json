{
    "version": 2,
    "builds": [
        {
            "src": "api/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "includeFiles": ["api/**"]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "frontend/build" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/frontend/static/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/frontend/favicon.ico"
        },
        {
            "src": "/manifest.json",
            "dest": "/frontend/manifest.json"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}
